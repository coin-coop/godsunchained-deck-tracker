<Window x:Class="GodsUnchained_Deck_Tracker.Windows.LogPathSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GodsUnchained_Deck_Tracker.Windows"
        mc:Ignorable="d"
        Title="Log path settings" Height="100" Width="750">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Column="0" Grid.Row="0" Name="txtLogFilePath" />
        <Button Grid.Column="0" Grid.Row="1" Name="buttonSave" Content="Save" Click="Button_Click" />
    </Grid>
</Window>
